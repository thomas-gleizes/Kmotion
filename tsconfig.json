{
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "paths": {
      "decorators/*": [
        "decorators/*"
      ],
      "exceptions/*": [
        "exceptions/*"
      ],
      "middlewares/*": [
        "middlewares/*"
      ],
      "plugins/*": [
        "plugins/*"
      ],
      "routes/*": [
        "routes/*"
      ],
      "schemas/*": [
        "schemas/*"
      ],
      "services/*": [
        "services/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "client/*": [
        "client/*"
      ]
    },
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ]
  },
  "include": [
    "src",
    "types"
  ]
}
