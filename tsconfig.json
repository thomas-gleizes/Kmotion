{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "paths": {
      "exceptions/*": ["exceptions/*"],
      "plugins/*": ["plugins/*"],
      "routes/*": ["routes/*"],
      "schemas/*": ["schemas/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "node_modules"
  ]
}
