{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "pages/*": ["pages/*"],
      "components/*": ["components/*"],
      "hooks/*": ["hooks/*"],
      "api/*": ["api/*"],
      "context/*": ["context/*"],
      "services/*": ["services/*"],
      "utils/*": ["utils/*"],
      "resources/*": ["resources/*"],
      "assets/*": ["assets/*"]
    }
  },
  "include": [
    "src",
    "types"
  ]
}
