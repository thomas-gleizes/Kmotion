{
  "compilerOptions": {
    "lib": [
      "ES2020",
      "webworker"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "sourceMap": true,
    "moduleResolution": "Node",
    "incremental": true,
    "target": "ES2020",
    "module": "CommonJS",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "src"
  },
  "lib": [
    "es2015"
  ],
  "include": [
    "./src/**/*.ts",
    "./types/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
