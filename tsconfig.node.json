{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "exceptions/*": [
        "exceptions/*"
      ],
      "middlewares/*": [
        "middlewares/*"
      ],
      "plugins/*": [
        "plugins/*"
      ],
      "routes/*": [
        "routes/*"
      ],
      "schemas/*": [
        "schemas/*"
      ],
      "services/*": [
        "services/*"
      ],
      "utils/*": [
        "utils/*"
      ]
    }
  },
  "include": [
    "src",
    "types"
  ]
}
