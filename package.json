{
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "node build.js",
    "build:dev": "node build.js --dev",
    "start": "node dist/app.js",
    "start:dev": "node --watch dist/app.js",
    "deploy": "pnpm run clean && node build.js && node dist/app.js",
    "dev": "concurrently \"pnpm build:dev\" \"pnpm start:dev\""
  },
  "dependencies": {
    "@prisma/client": "^4.7.1",
    "class-validator": "^0.13.2",
    "class-validator-jsonschema": "^3.1.1",
    "dotenv": "^16.0.3",
    "fastify": "^4.10.2"
  },
  "devDependencies": {
    "@types/node": "^18.11.11",
    "concurrently": "^7.6.0",
    "esbuild": "^0.16.2",
    "esbuild-node-externals": "^1.5.0",
    "prettier": "^2.8.0",
    "prisma": "^4.7.1",
    "typescript": "^4.9.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "none",
    "printWidth": 100
  }
}
